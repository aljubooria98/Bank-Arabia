@page "{id:int}"
@model Bank_Arabia.Web.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Redigera kund";
}

<div class="container mt-5">
    <h2><i class="fas fa-user-edit me-2"></i>Redigera kund</h2>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Customer.CustomerId" />

        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Customer.Givenname" class="form-label">Förnamn</label>
                <input asp-for="Customer.Givenname" class="form-control" />
                <span asp-validation-for="Customer.Givenname" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Customer.Surname" class="form-label">Efternamn</label>
                <input asp-for="Customer.Surname" class="form-control" />
                <span asp-validation-for="Customer.Surname" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Customer.Streetaddress" class="form-label">Gatuadress</label>
            <input asp-for="Customer.Streetaddress" class="form-control" />
            <span asp-validation-for="Customer.Streetaddress" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Customer.City" class="form-label">Stad</label>
                <input asp-for="Customer.City" class="form-control" />
                <span asp-validation-for="Customer.City" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Customer.Zipcode" class="form-label">Postnummer</label>
                <input asp-for="Customer.Zipcode" class="form-control" />
                <span asp-validation-for="Customer.Zipcode" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Customer.Country" class="form-label">Land</label>
            <input asp-for="Customer.Country" class="form-control" />
            <span asp-validation-for="Customer.Country" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Customer.Telephonecountrycode" class="form-label">Landskod</label>
                <input asp-for="Customer.Telephonecountrycode" class="form-control" />
                <span asp-validation-for="Customer.Telephonecountrycode" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Customer.Telephonenumber" class="form-label">Telefonnummer</label>
                <input asp-for="Customer.Telephonenumber" class="form-control" />
                <span asp-validation-for="Customer.Telephonenumber" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Customer.Emailaddress" class="form-label">E-post</label>
            <input asp-for="Customer.Emailaddress" class="form-control" />
            <span asp-validation-for="Customer.Emailaddress" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Spara ändringar</button>
        <a asp-page="./Search" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
