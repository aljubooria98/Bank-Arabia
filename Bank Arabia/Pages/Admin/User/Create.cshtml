@page
@model Bank_Arabia.Pages.Admin.User.CreateModel
@{
	ViewData["Title"] = "Skapa ny användare";
}
<div class="container mt-5 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-plus me-2"></i>Skapa ny användare</h2>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Tillbaka
        </a>
    </div>

    <form method="post" class="shadow-sm p-4 bg-dark rounded">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">E-post</label>
            <input asp-for="Input.Email" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Lösenord</label>
            <input asp-for="Input.Password" type="password" class="form-control bg-dark text-light border-light" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Role" class="form-label">Roll</label>
            <select asp-for="Input.Role" class="form-select bg-dark text-light border-light" asp-items="new SelectList(Model.Roles)">
                <option disabled selected value="">-- Välj roll --</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-check-circle me-1"></i> Skapa användare
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
